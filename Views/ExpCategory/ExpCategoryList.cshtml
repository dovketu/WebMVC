@model IEnumerable<WebMVC.ViewModels.ExpCategoryListView>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <p> 
                    <a href="@Url.Action("CreateExpCategory", "ExpCategory")" class="btn btn-primary btn-xs">Create</a>
                </p>
                <div class="col-md-6">
                    <table id="cat" class="table table-striped" style="width:100%">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td>
                                        <a asp-action="EditExpCat" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                $('#cat').DataTable({
                    "searching": false,
                    "lengthChange": false,
                    "paginate": false,
                    "info": false
                });
            });
        </script>
    }


